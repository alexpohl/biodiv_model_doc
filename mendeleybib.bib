issn = {00370738},
journal = {Sedimentary Geology},
keywords = {Anti-Atlas,Gondwana glaciation,Morocco,Ordovician,Petroleum system},
number = {1-2},
pages = {93--110},
title = {{Late Ordovician glacial record of the Anti-Atlas, Morocco}},
volume = {201},
