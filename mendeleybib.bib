doi = {10.1016/j.palaeo.2019.03.036},
file = {:Users/alexandrepohl/Documents/Mendeley Desktop/1-s2.0-S0031018218309787-main.pdf:pdf},
issn = {00310182},
journal = {Palaeogeography, Palaeoclimatology, Palaeoecology},
keywords = {Annulata event,Frasnian–Famennian extinction,Kellwasser horizons,Kowala quarry,Marine anoxia,Nutrient runoff},
number = {November 2018},
pages = {240--249},
title = {{Pulses of enhanced continental weathering associated with multiple Late Devonian climate perturbations: Evidence from osmium-isotope compositions}},
