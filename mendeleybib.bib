journal = {Geophysical Journal International},
keywords = {Antarctica,Arctic region,Dynamics of lithosphere and mantle,Earth rotation variations,Sea level change},
number = {2},
pages = {729--742},
title = {{On the robustness of predictions of sea level fingerprints}},
volume = {187},
year = {2011}
}
