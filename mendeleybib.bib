file = {:Users/alexandrepohl/Documents/Mendeley Desktop/Richey-2018-EarthandPlanetaryScienceLetter.pdf:pdf},
issn = {0012821X},
journal = {Earth and Planetary Science Letters},
keywords = {Lauraceae,Ocean Anoxic Event,carbon cycle perturbation,mid-Cretaceous pCO2,stomata},
