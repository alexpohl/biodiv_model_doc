journal = {Gondwana Research},
keywords = {Iapetus Ocean,Mass wasting,Meteorite impact,Ordovician,Plate tectonics},
number = {2},
pages = {535--541},
title = {{Global mass wasting during the Middle Ordovician: Meteoritic trigger or plate-tectonic environment?}},
volume = {19},
year = {2011}
