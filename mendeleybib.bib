keywords = {Cryptospore,Katian,Siberian Platform,Upper Ordovician},
number = {May 2016},
pages = {4--13},
title = {{Cryptospores from the Katian (Upper Ordovician) of the Tungus basin: The first evidence for early land plants from the Siberian paleocontinent}},
