keywords = {Compensation,Hadley cell,Meridional heat transport,Overturning circulation},
pages = {1--8},
title = {{A modelling study of the Bjerknes compensation in the meridional heat transport in a freshening ocean}},
volume = {65},
year = {2013}
}
@article{Ross1988,
