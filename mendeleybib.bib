author = {Veizer, J{\'{a}}n and Ala, Davin and Azmy, Karem and Bruckschen, Peter and Buhl, Dieter and Bruhn, Frank and Garden, Giles A.F. and Diener, Andreas and Ebneth, Stefan and Godderis, Yves and Jasper, Torsten and Korte, Christoph and Pawellek, Frank and Podlaha, Olaf G. and Strauss, Harald},
