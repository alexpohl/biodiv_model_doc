journal = {Canadian Journal of Earth Sciences},
number = {11},
pages = {1190--1204},
title = {{Neo-tethys geodynamics and mantle convection: From extension to compression in Africa and a conceptual model for obduction}},
volume = {53},
year = {2016}
}
