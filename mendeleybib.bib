journal = {Palaeontology},
keywords = {Late Ordovician mass extinction,fossil record,last occurrences,mass extinction,sequence stratigraphy,stratigraphic architecture},
pages = {1--20},
title = {{Recognizing pulses of extinction from clusters of last occurrences}},
year = {2020}
}
