file = {:Users/alexandrepohl/Documents/Mendeley Desktop/Quaternary Science Reviews 2017 Dendy.pdf:pdf},
issn = {02773791},
journal = {Quaternary Science Reviews},
pages = {234--244},
publisher = {Elsevier Ltd},
title = {{Sensitivity of Last Interglacial sea-level high stands to ice sheet configuration during Marine Isotope Stage 6}},
url = {http://dx.doi.org/10.1016/j.quascirev.2017.06.013},
volume = {171},
