journal = {Global Change Biology},
keywords = {climate change,extinction,fossil,metabolic activity,photosymbiont,selectivity},
number = {4},
pages = {868--878},
pmid = {33230883},
title = {{Victims of ancient hyperthermal events herald the fates of marine clades and traits under global warming}},
volume = {27},
