issn = {23752548},
journal = {Science Advances},
number = {11},
pages = {1--8},
pmid = {30498776},
title = {{Molecular fossils from phytoplankton reveal secular PCO2 trend over the phanerozoic}},
volume = {4},
year = {2018}
}
@article{Demory2021,
