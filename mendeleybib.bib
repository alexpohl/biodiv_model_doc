keywords = {I/Ca,OAE 2,oxygenation},
number = {5},
pages = {510--526},
title = {{Upper ocean oxygenation dynamics from I/Ca ratios during the Cenomanian-Turonian OAE 2}},
volume = {30},
year = {2015}
}
@article{Zhou2008,
