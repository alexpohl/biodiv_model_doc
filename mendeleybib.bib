journal = {Geoscientific Model Development},
number = {4},
pages = {1949--1985},
title = {{SPEAD 1.0 – Simulating Plankton Evolution with Adaptive Dynamics in a two-trait continuous fitness landscape applied to the Sargasso Sea}},
