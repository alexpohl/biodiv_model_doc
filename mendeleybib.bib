issn = {00310182},
journal = {Palaeogeography, Palaeoclimatology, Palaeoecology},
keywords = {Carbon isotopes,Euxinia,Greenhouse,Ordovician,Sulfur isotopes},
pages = {189--214},
publisher = {Elsevier B.V.},
title = {{Sulfur isotope evidence for widespread euxinia and a fluctuating oxycline in Early to Middle Ordovician greenhouse oceans}},
