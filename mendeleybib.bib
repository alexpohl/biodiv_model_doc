keywords = {Cambrian,DICE,Iron speciation,Marine redox,SPICE,Sedimentary redox},
number = {November 2020},
publisher = {Elsevier B.V.},
title = {{Variable redox conditions as an evolutionary driver? A multi-basin comparison of redox in the middle and later Cambrian oceans (Drumian-Paibian)}},
