keywords = {China,Malaysia,Palaeogeography,Palaeozoic,Siberia,Sibumasu},
pages = {40--79},
publisher = {Elsevier B.V.},
title = {{The dynamic evolution of the Palaeozoic geography of eastern Asia}},
