@article{Tournier2010,
abstract = {Major hydrocarbon reservoirs from North Africa are located in the Cambro-Ordovician sandstones, which partly originate from a glacial environment (Late Ordovician). In several intracratonic basins of North Africa, like the Sbaa Basin (Algeria), glacial Ordovician deposits are well developed (150 to 300m thick). These deposits are composed of very fine to coarse-grained sandstones, locally intercalated with clayous siltstones. Glacial Ordovician sandstones display high lateral and vertical variations of porosity and permeability, mostly controlled by burial diagenetic processes, and in a lesser extent by sedimentary facies. Although many aspects of sandstone diagenesis are well-studied, the character and processes of glacial-associated diagenesis remain unknown. Therefore, the main objectives of this thesis are (i) to assess the diagenetic history of Cambro- Ordovician sandstones of the Sbaa Basin, (ii) to understand the structural and sedimentological control on diagenesis, and (iii) to determine and quantify the role of diagenesis on the reservoir poro-perm evolution. To address these problems, multiple analyses were conducted on drill-core samples of the Sbaa Basin: Petrographic analyses allowed the identification, characterization, and classification of diagenetic processes. The main diagenetic processes affecting the reservoir are: quartz cementation, chemical compaction, detrital feldspar dissolution, clay coating around detrital quartz grains, smectite illitization, and authigenesis of illite, dickite, calcite, siderite, and pyrite. Microthermometric analyses of fluid inclusions within quartz overgrowths demonstrate that quartz cementation began at approximately 100°C, and gradually continued during burial to temperatures as high as 160°C. According to the thermal history of the basin, this temperature range indicates that cementation occurred during the Visean-Namurian burial phase. Silica sources correspond to stylolitization, intergranular quartz dissolution, feldspar dissolution, and smectite illitization. Three phases of quartz cement were evident from cathodoluminescence and microprobe analyses. Each phase contains distinct Al content, partly related to the associated silica source. Fluid evolution was determined by isotopic analyses on early and late authigenic minerals (siderite, calcite, quartz, and dickite). Results indicate the influence of early meteoric water, gradually heated during burial, and progressively enriched in 18O due to interactions with the host rock. Dickite is observed within or close to microfractures in the Ordovician sandstones. At the field scale, dickite is observed only in fractured wells and is more abundant in the clay fraction close to the Silurian source- rock. Fracture features (location and orientation) in Ordovician sandstones are related to the Hercynian orogeny. Dickite develops in acidic conditions. Tectonic activity and fracturation related to the Hercynian orogeny probably triggered acidic fluids migration from the organic-rich Silurian shales into the Ordovician sandstones. This pattern leads to authigenic clay zonations in Ordovician sandstones, in particular with the development of dickite within and close to fractures, while illite is formed in non-fractured areas. Dickite cements have less destructive effect on permeability than illite cements. Therefore, the relationship between fracturation and dickite development provides a good proxy for the prediction of reservoir quality. Quartz cementation and intergranular quartz dissolution (also called « pressure dissolution ») are mainly responsible for porosity and permeability destruction within the studied reservoir. This study highlights the major influence of synsedimentary glaciogenic processes on the distribution and the importance of both diagenetic phenomena. Indeed, illite coatings around detrital quartz are systematically located below glacial pavements that separate two sandstone facies of glacial units with low clay contents. These clay coatings were mechanically emplaced below the ice sheet by pressurized water circulation and subsequent fluid pressure release within sandy subglacial soft bedrock that was initially porous and permeable. This process did not occur if an argillaceous layer (acting as a permeability barrier) was intercalated between the glacial pavement and the sandy layer. The clay coatings occurence will determine afterwards diagenetic evolution of these sandstones by enhancing chemical compaction (intergranular quartz dissolution), and inhibiting quartz cementation or decreasing the rate of precipitation. Silica produced by intergranular quartz dissolution was then exported and precipitated within more porous levels where chemical compaction is low. Therefore, the organization of the glacial lithofacies controls the diagenetic architecture and petrophysical properties of the reservoir. This relationship explains the present reservoir quality distribution, and differentiates between the lower part (tight) and the upper part (conventional) of the glacial Ordovician reservoir.},
author = {Tournier, Florent},
file = {:Users/alexandrepohl/Documents/Mendeley Desktop/2010 Tournier-1.pdf:pdf},
title = {{M{\'{e}}canismes et contr{\^{o}}le des ph{\'{e}}nom{\`{e}}nes diag{\'{e}}n{\'{e}}tiques en milieu acide dans les gr{\`{e}}s de l ' Ordovicien glaciaire du bassin de Sbaa , Alg{\'{e}}rie}},
year = {2010}
}
