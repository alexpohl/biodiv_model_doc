doi = {10.1007/s00126-019-00873-9},
file = {:Users/alexandrepohl/Documents/Mendeley Desktop/Large2019_Article_AtmosphereOxygenCyclingThrough.pdf:pdf},
issn = {14321866},
journal = {Mineralium Deposita},
keywords = {Oxygen cycling,Phanerozoic atmosphere,Proterozoic atmosphere,Sediment-hosted zinc-Lead deposits,Stratiform copper deposits},
number = {4},
