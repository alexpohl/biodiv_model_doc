doi = {10.1016/j.palaeo.2003.12.019},
file = {:Users/alexandrepohl/Documents/Mendeley Desktop/Palaeogeography Palaeoclimatology Palaeoecology 2004 Herrmann-1.pdf:pdf},
issn = {00310182},
journal = {Palaeogeography, Palaeoclimatology, Palaeoecology},
keywords = {Atmospheric general circulation model,Atmospheric pCO2,Glaciation,Late Ordovician},
number = {1-2},
pages = {59--74},
title = {{The impact of paleogeography, pCO2, poleward ocean heat transport and sea level change on global cooling during the Late Ordovician}},
