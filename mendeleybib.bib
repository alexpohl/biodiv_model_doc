issn = {25724525},
journal = {Paleoceanography and Paleoclimatology},
keywords = {Early Jurassic,European Shelf,Toarcian Oceanic Anoxic Event,ocean circulation,organic carbon burial,oxygenation},
number = {9},
pages = {994--1012},
title = {{Ocean Circulation in the Toarcian (Early Jurassic): A Key Control on Deoxygenation and Carbon Burial on the European Shelf}},
