journal = {Progress in Earth and Planetary Science},
keywords = {Arabian Sea,Cenozoic,Climate-tectonic,Erosion,Exhumation,Foreland basin,Geochemistry,Himalaya,Monsoon,Provenance,Weathering},
number = {1},
publisher = {Progress in Earth and Planetary Science},
