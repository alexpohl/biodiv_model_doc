author = {Thomazo, C. and Brayard, A. and Elmeknassi, S. and Vennin, E. and Olivier, N. and Caravaca, G. and Escarguel, G. and Fara, E. and Bylund, K. G. and Jenks, J. F. and Stephen, D. A. and Killingsworth, B. and Sansjofre, P. and Cartigny, P.},
doi = {10.1016/j.earscirev.2018.06.019},
file = {:Users/alexandrepohl/Documents/Mendeley Desktop/Earth-Science.pdf:pdf;:Users/alexandrepohl/Documents/Mendeley Desktop/Thomazo et al. - 2019 - Multiple sulfur isotope signals associated with the late Smithian event and the SmithianSpathian boundary.pdf:pdf},
issn = {00128252},
