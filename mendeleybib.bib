author = {Magny, Michel and Aalbersberg, Gerard and B{\'{e}}geot, Carole and Benoit-Ruffaldi, Pascale and Bossuet, Gilles and Disnar, Jean Robert and Heiri, Oliver and Laggoun-Defarge, Fatima and Mazier, Florence and Millet, Laurent and Peyron, Odile and Vanni{\`{e}}re, Boris and Walter-Simonnet, Anne V{\'{e}}ronique},
