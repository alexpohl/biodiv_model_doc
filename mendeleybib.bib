journal = {Geology},
number = {8},
pages = {683--686},
title = {{Latitudinal temperature gradients and high-latitude temperatures during the latest Cretaceous: Congruence of geologic data and climate models}},
volume = {43},
year = {2015}
}
@article{Sakaguchi2011,
