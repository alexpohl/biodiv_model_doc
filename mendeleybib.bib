pages = {136--153},
publisher = {Elsevier B.V.},
title = {{High-Resolution Event Stratigraphy (HiRES) and the quantification of stratigraphic uncertainty: Silurian examples of the quest for precision in stratigraphy}},
url = {http://dx.doi.org/10.1016/j.earscirev.2014.11.011},
volume = {141},
