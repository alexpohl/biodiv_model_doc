file = {:Users/alexandrepohl/Documents/Mendeley Desktop/Global and Planetary Change 2018 Ruebsam.pdf:pdf},
issn = {09218181},
journal = {Global and Planetary Change},
keywords = {Cryosphere demise,Glacio-eustatic sea-level change,Global warming,Pliensbachian icehouse,Toarcian CIE,Toarcian OAE},
number = {November 2018},
pages = {440--453},
