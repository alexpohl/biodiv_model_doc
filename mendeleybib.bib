doi = {10.3389/feart.2019.00263},
file = {:Users/alexandrepohl/Documents/Mendeley Desktop/Wong et al. - 2019 - Deep Carbon Cycling Over the Past 200 Million Year.pdf:pdf},
issn = {22966463},
journal = {Frontiers in Earth Science},
keywords = {carbon dioxide,carbonate assimilation,deep carbon cycle,plate reconstructions,solid Earth degassing,subduction zone},
number = {October},
pages = {1--22},
title = {{Deep Carbon Cycling Over the Past 200 Million Years: A Review of Fluxes in Different Tectonic Settings}},
volume = {7},
year = {2019}
}
