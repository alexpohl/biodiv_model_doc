file = {:Users/alexandrepohl/Documents/Mendeley Desktop/1-s2.0-S0012821X19305825-main.pdf:pdf},
issn = {0012821X},
journal = {Earth and Planetary Science Letters},
keywords = {Early Cretaceous,South Atlantic,gateways,neodymium isotopes,ocean circulation,organic carbon burial},
pages = {115890},
publisher = {Elsevier B.V.},
title = {{The impact of Early Cretaceous gateway evolution on ocean circulation and organic carbon burial in the emerging South Atlantic and Southern Ocean basins}},
