doi = {10.1016/j.jmarsys.2015.09.004},
file = {:Users/alexandrepohl/Documents/Mendeley Desktop/Journal of Marine Systems 2016 Le M{\'{e}}zo.pdf:pdf},
issn = {09247963},
journal = {Journal of Marine Systems},
keywords = {Fourier transform,North Atlantic,North Pacific,Pelagic environment,Size,Trophic levels,Variability},
