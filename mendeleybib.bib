keywords = {Ordovician,alkaline soil water,element mobility,eluviation-illuviation patterns,intra-rhyolitic palaeosol,palaeoclimate signatures,pedogenesis},
number = {1},
pages = {143--165},
title = {{Record of climatic fluctuations and high pH weathering conditions in a thick Ordovician palaeosol developed in rhyolite of the Dunn Point Formation, Arisaig, Nova Scotia, Canada}},
volume = {152},
year = {2015}
