journal = {Palaeogeography, Palaeoclimatology, Palaeoecology},
keywords = {Carbon cycle,Carbonates,Oxygenation,SSFs,Xiaotan section},
number = {January},
title = {{Variations of redox conditions in the atmosphere and Yangtze Platform during the Ediacaran-Cambrian transition: Constraints from Cr isotopes and Ce anomalies}},
