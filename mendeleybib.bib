doi = {10.5194/cp-15-169-2019},
file = {:Users/alexandrepohl/Documents/Mendeley Desktop/Precipitation_d_18O_on_the_Himalaya-Tibet_orogeny_.pdf:pdf},
issn = {18149332},
journal = {Climate of the Past},
number = {1},
