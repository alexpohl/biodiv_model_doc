file = {:Users/alexandrepohl/Documents/Mendeley Desktop/Marine Geology 2005 Ridgwell.pdf:pdf},
issn = {00253227},
journal = {Marine Geology},
keywords = {Calcium carbonate,Carbon cycle,Ocean chemistry,Phanerozoic},
number = {3-4},
pages = {339--357},
title = {{A Mid Mesozoic Revolution in the regulation of ocean chemistry}},
volume = {217},
year = {2005}
}
