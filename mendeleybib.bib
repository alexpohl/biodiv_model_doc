publisher = {Elsevier B.V.},
title = {{Development of a novel empirical framework for interpreting geological carbon isotope excursions, with implications for the rate of carbon injection across the PETM}},
url = {http://dx.doi.org/10.1016/j.epsl.2015.11.027},
volume = {435},
year = {2016}
}
@article{Edwards2018,
abstract = {Profound changes in environmental conditions, particularly atmospheric oxygen levels, are thought to be important drivers of several major biotic events (e.g. mass extinctions and diversifications). The early Paleozoic represents a key interval in the oxygenation of the ocean–atmosphere system and evolution of the biosphere. Global proxies (e.g. carbon ($\delta$13C) and sulfur ($\delta$34S) isotopes) are used to diagnose potential changes in oxygenation and infer causes of environmental change and biotic turnover. The Cambrian–Ordovician contains several trilobite extinctions (some are apparently local, but others are globally correlative) that are attributed to anoxia based on coeval positive $\delta$13C and $\delta$34S excursions. These extinction and excursion events have yet to be coupled with more recently developed proxies thought to be more reflective of local redox conditions in the water column (e.g. I/Ca) to confirm whether these extinctions were associated with oxygen crises over a regional or global scale. Here we examine an Early Ordovician (Tremadocian Stage) extinction event previously interpreted to reflect a continuation of recurrent early Paleozoic anoxic events that expanded into nearshore environments. $\delta$13C, $\delta$34S, and I/Ca trends were measured from three sections in the Great Basin region to test whether I/Ca trends support the notion that anoxia was locally present in the water column along the Laurentian margin. Evidence for anoxia is based on coincident, but not always synchronous, positive $\delta$13C and $\delta$34S excursions (mainly from carbonate-associated sulfate and less so from pyrite data), a 30% extinction of standing generic diversity, and near-zero I/Ca values. Although evidence for local water column anoxia from the I/Ca proxy broadly agrees with intervals of global anoxia inferred from $\delta$13C and $\delta$34S trends, a more complex picture is evident where spatially and temporally variable local trends are superimposed on time-averaged global trends. Stratigraphic sections from the distal and deeper part of the basin (Shingle Pass and Meiklejohn Peak) preserve synchronous global ($\delta$13C and $\delta$34S) and water column (I/Ca) evidence for anoxia, but not at the more proximal section (Ibex, UT). Although geochemical and paleontological evidence point toward anoxia as the driver of this Early Ordovician extinction event, differences between I/Ca and $\delta$13C–$\delta$34S signals suggest regional variation in the timing, extent, and persistence of anoxia.},
author = {Edwards, Cole T. and Fike, David A. and Saltzman, Matthew R. and Lu, Wanyi and Lu, Zunli},
doi = {10.1016/j.epsl.2017.10.002},
file = {:Users/alexandrepohl/Documents/Mendeley Desktop/Earth and Planetary Science Letters 2018 Edwards.pdf:pdf},
issn = {0012821X},
journal = {Earth and Planetary Science Letters},
keywords = {I/Ca,Ordovician,anoxia,carbon isotopes,extinction,sulfur isotopes},
number = {October 2017},
pages = {125--135},
publisher = {Elsevier B.V.},
title = {{Evidence for local and global redox conditions at an Early Ordovician (Tremadocian) mass extinction}},
