doi = {10.1007/s11120-010-9593-1},
file = {:Users/alexandrepohl/Documents/Mendeley Desktop/Payne20et20al202011.pdf:pdf},
issn = {01668595},
journal = {Photosynthesis Research},
keywords = {Body size,Evolution,Maximum size,Optimum size,Oxygen,Precambrian},
number = {1},
