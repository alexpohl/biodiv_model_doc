keywords = {Anoxia,Basinal facies,Carbon isotope,Conodont,Frasnian–Famennian,Productivity},
number = {May},
pages = {60--74},
publisher = {Elsevier},
title = {{The influence of the Late Devonian Kellwasser events on deep-water ecosystems: Evidence from palaeontological and geochemical records from South China}},
