author = {Elrick, Maya and Berkyov{\'{a}}, Stana and Klapper, Gilbert and Sharp, Zachary and Joachimski, Michael and Fr{\'{y}}da, Jiř{\'{i}}},
doi = {10.1016/j.palaeo.2009.03.008},
