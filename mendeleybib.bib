file = {:Users/alexandrepohl/Documents/Mendeley Desktop/Sedimentary Geology 2009 Denis-1.pdf:pdf},
issn = {00370738},
journal = {Sedimentary Geology},
keywords = {Brei{eth}amerkurj{\"{o}}kull,Clast-fabric analysis,Fluid pressure,Iceland,Subglacial deformation},
number = {1-4},
pages = {71--86},
publisher = {Elsevier B.V.},
title = {{Fluid-pressure controlled soft-bed deformation sequence beneath the surging Brei{eth}amerkurj{\"{o}}kull (Iceland, Little Ice Age)}},
