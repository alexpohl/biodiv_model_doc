file = {:Users/alexandrepohl/Documents/Mendeley Desktop/Earth and Planetary Science Letters 2009 Le Hir.pdf:pdf},
issn = {0012821X},
journal = {Earth and Planetary Science Letters},
keywords = {cap dolostones,greenhouse,modelling,snowball Earth,weathering},
number = {3-4},
pages = {453--463},
publisher = {Elsevier B.V.},
title = {{The snowball Earth aftermath: Exploring the limits of continental weathering processes}},
url = {http://dx.doi.org/10.1016/j.epsl.2008.11.010},
