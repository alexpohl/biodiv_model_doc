journal = {Earth Science Reviews},
keywords = {Arabia,Black shale,Graptolite,North Africa,Petroleum source rock,Silurian},
number = {1-4},
pages = {121--200},
title = {{Lower Silurian 'hot shales' in North Africa and Arabia: Regional distribution and depositional model}},
