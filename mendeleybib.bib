keywords = {Anoxia,Brine,Carbon isotopes,Mass extinction,Sedex deposits,Strontium isotopes},
pages = {474--486},
title = {{Sedex brine expulsions to Paleozoic basins may have changed global marine 87Sr/86Sr values, triggered anoxia, and initiated mass extinctions}},
url = {http://dx.doi.org/10.1016/j.oregeorev.2017.02.031},
volume = {86},
