year = {2014}
}
@article{Anderson2019,
abstract = {Enhanced ocean carbon storage during the Pleistocene ice ages lowered atmospheric CO2 concentrations by 80 to 100 ppm relative to interglacial levels. Leading hypotheses to explain this phenomenon invoke a greater efficiency of the ocean's biological pump, in which case carbon storage in the deep sea would have been accompanied by a corresponding reduction in dissolved oxygen. We exploit the sensitivity of organic matter preservation in marine sediments to bottom water oxygen concentration to constrain the level of dissolved oxygen in the deep central equatorial Pacific Ocean during the last glacial period (18,000–28,000 years BP) to have been within the range of 20–50 $\mu$mol/kg, much less than the modern value of $\sim$168 $\mu$mol/kg. We further demonstrate that reduced oxygen levels characterized the water column below a depth of $\sim$1,000 m. Converting the ice age oxygen level to an equivalent concentration of respiratory CO2, and extrapolating globally, we estimate that deep-sea CO2 storage during the last ice age exceeded modern values by as much as 850 Pg C, sufficient to balance the loss of carbon from the atmosphere ($\sim$200 Pg C) and from the terrestrial biosphere ($\sim$300–600 Pg C). In addition, recognizing the enhanced preservation of organic matter in ice age sediments of the deep Pacific Ocean helps reconcile previously unexplained inconsistencies among different geochemical and micropaleontological proxy records used to assess past changes in biological productivity of the ocean.},
