journal = {Palaeogeography, Palaeoclimatology, Palaeoecology},
keywords = {Conodont,GICE,Laurentia,Mohawkian,Ordovician,Oxygen isotopes},
pages = {172--180},
publisher = {Elsevier B.V.},
title = {{Conodont apatite $\delta$ 18O values from a platform margin setting, Oklahoma, USA: Implications for initiation of Late Ordovician icehouse conditions}},
