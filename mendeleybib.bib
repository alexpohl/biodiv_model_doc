doi = {10.1344/105.000000268},
file = {:Users/alexandrepohl/Documents/Mendeley Desktop/Geologica Acta 2009 Pujalte-1.pdf:pdf},
issn = {16956133},
journal = {Geologica Acta},
keywords = {CIE,Ilerdian stage,Larger foraminifera,P-E boundary,Pyrenees,Silver spike,Tremp-Graus Basin},
