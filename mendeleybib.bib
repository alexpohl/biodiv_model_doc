keywords = {Avalonia,Early Cambrian,South Wales,caliche,sequence stratigraphy},
number = {6},
pages = {1022--1046},
title = {{Reconstructing the avalonia palaeocontinent in the Cambrian: A 519 Ma caliche in South Wales and transcontinental middle terreneuvian sandstones}},
volume = {150},
year = {2013}
