issn = {19449186},
journal = {Paleoceanography},
keywords = {Antarctic glaciation,Cenozoic cooling,Eocene-Oligocene transition,carbon cycle,carbonate shelf-basin fractionation,permafrost},
number = {2},
pages = {311--329},
title = {{Global carbon cycle perturbation across the Eocene-Oligocene climate transition}},
volume = {31},
