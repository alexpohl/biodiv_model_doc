file = {:Users/alexandrepohl/Documents/Mendeley Desktop/Chemical Geology 2013 Moiroud.pdf:pdf},
issn = {00092541},
journal = {Chemical Geology},
keywords = {Cretaceous,Japan,Neodymium isotopes,Oceanic circulation},
pages = {160--170},
publisher = {Elsevier B.V.},
title = {{Evolution of the neodymium isotopic signature of neritic seawater on a northwestern Pacific margin: New constrains on possible end-members for the composition of deep-water masses in the Late Cretaceous ocean}},
url = {http://dx.doi.org/10.1016/j.chemgeo.2013.08.008},
