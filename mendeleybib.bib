journal = {Palaeogeography, Palaeoclimatology, Palaeoecology},
keywords = {Ashgillian,Cluster analysis,Conodonts,Eustasy,Llandovery},
number = {1-3},
pages = {5--32},
title = {{Late Ordovician-Early Silurian (Ashgillian-Llandovery) sea level curve derived from conodont community analysis, Anticosti Island, Qu{\'{e}}bec}},
volume = {180},
year = {2002}
}
@article{Young2008,
