file = {:Users/alexandrepohl/Documents/Mendeley Desktop/1-s2.0-S0012821X18302875-main.pdf:pdf},
issn = {0012821X},
journal = {Earth and Planetary Science Letters},
keywords = {Devonian,South China,conodont,oxygen isotope,palaeotemperature},
pages = {174--184},
publisher = {Elsevier B.V.},
title = {{Did climate changes trigger the Late Devonian Kellwasser Crisis? Evidence from a high-resolution conodont $\delta$18OPO4 record from South China}},
