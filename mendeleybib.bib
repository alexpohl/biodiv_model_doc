file = {:Users/alexandrepohl/Documents/Mendeley Desktop/VerberkAtkinsonHoefnagelHirstHorneandSiepel_2020_Shrinkingbodysizesinresponsetowarming_BiologicalReviews.pdf:pdf},
issn = {1469185X},
journal = {Biological Reviews},
keywords = {Bergmann's rule,cell size,climate warming,gigantism,growth trajectory,hypoxia,life-history trade-off,phenotypic plasticity,temperature–size rule,thermal reaction norms},
number = {1},
