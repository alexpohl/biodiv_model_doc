keywords = {Bulk organic matter,Carbon isotope stratigraphy,GOBE,Ordovician,Oxygenation},
pages = {102--117},
publisher = {Elsevier B.V.},
title = {{Paired carbon isotopic analysis of Ordovician bulk carbonate ($\delta$13Ccarb) and organic matter ($\delta$13Corg) spanning the Great Ordovician Biodiversification Event}},
