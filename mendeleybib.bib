journal = {Geobios},
keywords = {Ammonoids,Biogeography,Biotic recovery,Bootstrapped spanning network,Cluster analysis,Early Triassic,Nonmetric multidimensional scaling},
number = {6},
pages = {749--765},
title = {{The biogeography of Early Triassic ammonoid faunas: Clusters, gradients, and networks}},
