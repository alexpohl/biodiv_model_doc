keywords = {Coupling,Glacial isostatic adjustment,Global,Ice sheet model,Quaternary,Sea level changes,Self-gravitation},
pages = {13--28},
publisher = {Elsevier Ltd},
title = {{Current state and future perspectives on coupled ice-sheet – sea-level modelling}},
