journal = {Palaeontology},
keywords = {Pliensbachian,ammonites,biogeography,provincialism,scale effects,similarity distance decay},
number = {5},
pages = {671--687},
title = {{Gauging scale effects and biogeographical signals in similarity distance decay analyses: an Early Jurassic ammonite case study}},
