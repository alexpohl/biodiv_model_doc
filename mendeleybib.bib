file = {:Users/alexandrepohl/Documents/Mendeley Desktop/Earth-Science Reviews 2018 Lee.pdf:pdf},
issn = {00128252},
journal = {Earth-Science Reviews},
keywords = {Cambrian,Dysoxia,Hypoxia,Lithistid sponge-microbial reef,Reef gap},
number = {May},
pages = {98--121},
publisher = {Elsevier},
title = {{Marine oxygenation, lithistid sponges, and the early history of Paleozoic skeletal reefs}},
url = {https://doi.org/10.1016/j.earscirev.2018.04.003},
volume = {181},
year = {2018}
