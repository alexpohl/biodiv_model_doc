@article{Kaljo2004,
abstract = {Carbon isotope changes during most of Late Ordovician time (from the mid-Caradoc Kinnekulle K-bentonite until the beginning of the Silurian) were investigated. As the corresponding sequence of rocks is stratigraphically nearly complete in Estonia, an attempt was made to use it to elaborate the general pattern of carbon isotope changes in the Late Ordovician. Complications were caused by several local or regional hiatuses in the middle and late Caradoc and Hirnantian. A total of 385 whole rock samples were studied from eight drill cores in northern and central Estonia. The following positive carbon isotope events were observed: (1) the mid-Caradoc excursion (peak $\delta$ 13C value 2.2‰) in the uppermost part of the Keila Stage, also known in Sweden; (2) the first late Caradoc excursion (1.9‰) in the lower part of the Rakvere Stage; (3) the second late Caradoc excursion (2.4‰) in the upper part of the Nabala Stage; (4) the early Ashgill excursion (2.5‰) in the lowermost part of the Pirgu Stage; (5) the widely known large Hirnantian excursion (in Estonia the peak value reaches 6.7‰) in the Porkuni Stage. The study interval comprises a long (∼10 Ma) period characterized by low-magnitude carbon isotope changes and a following brief (∼2 Ma) interval with large changes. No obvious lithological preference for hosting the positive shifts was recorded. In principle, the $\delta$ 13C values exceeding the background values may occur in all types of rocks present in a sedimentary basin. Several $\delta$ 13C positive excursions (values 1.5‰ to 3‰) in the Mohawkian of North America are evidence that the minor Caradoc and early Ashgill $\delta$ 13C positive shifts in Baltoscandia may have counterparts in Laurentia. If correctly correlated, these shifts may have global significance. The Hirnantian excursion is usually linked to a major glacial event, even if some carbon cycling mechanisms are not completely understood. The environmental causes suggested for the earlier minor shifts range from global climatic and glacial events to very local changes in basin regime and sea level. Our study supports the primary role of climatic or climatically triggered oceanic processes. {\textcopyright} 2004 Elsevier B.V. All rights reserved.},
author = {Kaljo, Dimitri and Hints, Linda and Martma, T{\~{o}}nu and N{\~{o}}lvak, Jaak and Orasp{\~{o}}ld, Asta},
doi = {10.1016/j.palaeo.2004.02.044},
file = {:Users/alexandrepohl/Documents/Mendeley Desktop/Palaeogeography Palaeoclimatology Palaeoecology 2004 Kaljo.pdf:pdf},
issn = {00310182},
journal = {Palaeogeography, Palaeoclimatology, Palaeoecology},
keywords = {Carbon isotopes,Environmental reasons,Estonia,Late Ordovician,Stratigraphy},
