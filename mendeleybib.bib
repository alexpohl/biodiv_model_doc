doi = {10.1073/pnas.1515080113},
file = {:Users/alexandrepohl/Documents/Mendeley Desktop/PNAS-2016-Lau-.pdf:pdf},
issn = {10916490},
journal = {Proceedings of the National Academy of Sciences},
keywords = {Biogeochemical cycling,Carbon isotopes,Early Triassic,Paleoredox,Uranium isotopes},
number = {9},
pages = {2360--2365},
title = {{Marine anoxia and delayed Earth system recovery after the end-Permian extinction}},
volume = {113},
year = {2016}
}
@article{Joachimski2009,
