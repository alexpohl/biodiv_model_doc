issn = {00167037},
journal = {Geochimica et Cosmochimica Acta},
pages = {39--56},
title = {{Reconstruction of the Nd isotope composition of seawater on epicontinental seas: Testing the potential of Fe-Mn oxyhydroxide coatings on foraminifera tests for deep-time investigations}},
volume = {99},
year = {2012}
}
@article{Landing2013a,
