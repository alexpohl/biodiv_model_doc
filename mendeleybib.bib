file = {:Users/alexandrepohl/Documents/Mendeley Desktop/Wei-2020-Highlydynamicmarineredoxstatethr.pdf:pdf},
issn = {0012821X},
journal = {Earth and Planetary Science Letters},
keywords = {animal innovations,early Cambrian,marine redox dynamics,siliciclastic strata,uranium isotopes},
pages = {116361},
publisher = {Elsevier B.V.},
title = {{Highly dynamic marine redox state through the Cambrian explosion highlighted by authigenic $\delta$238U records}},
