file = {:Users/alexandrepohl/Documents/Mendeley Desktop/Thomazo_et_al-2016-Geobiology.pdf:pdf},
issn = {14724669},
journal = {Geobiology},
number = {3},
pages = {220--236},
pmid = {26842810},
title = {{A diagenetic control on the Early Triassic Smithian-Spathian carbon isotopic excursions recorded in the marine settings of the Thaynes Group (Utah, USA)}},
volume = {14},
