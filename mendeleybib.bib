file = {:Users/alexandrepohl/Documents/Mendeley Desktop/Tectonophysics 1998 Meschede.pdf:pdf},
issn = {00401951},
journal = {Tectonophysics},
keywords = {Caribbean plate,Cenozoic,Flood basalt,Mesozoic,Nicoya complex,Plate tectonics},
number = {3-4},
pages = {269--291},
title = {{A plate-tectonic model for the Mesozoic and Early Cenozoic history of the Caribbean plate}},
volume = {296},
year = {1998}
