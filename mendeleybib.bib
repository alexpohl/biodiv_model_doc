@article{Edwards2016,
abstract = {Paired measurements of bulk carbonate ($\delta$13Ccarb), organic matter ($\delta$13Corg), and their difference ($\Delta$13C) can be used to estimate changes in isotopic fractionation through time as a function of O2/CO2 in the atmosphere. However, because local scale processes can also affect $\Delta$13C, it is essential to compare sections from widely separated water masses. Here we present new $\delta$13Corg data from Ordovician carbonate rocks from the Great Basin, Oklahoma, and Appalachian Basin and compare with published $\delta$13Ccarb records from these sections and paired $\delta$13C values from other carbonate successions around North America. These new data complement previous studies that focused on Upper Ordovician $\delta$13Ccarb excursions and now provide a composite Ordovician $\delta$13Corg record. New Lower Ordovician (Tremadocian Stage) $\delta$13Corg data range from ca. − 26 to − 28‰, decreasing throughout the Lower–Middle Ordovician (Floian–Dapingian Stages) to ca. − 29 to − 31‰. $\delta$13Corg values remain at their lowest throughout the Sandbian and are similar to other published Upper Ordovician (Sandbian–Katian) $\delta$13Corg data from North America. $\Delta$13C values from well-preserved intervals generally vary between + 26 to + 28‰ throughout the Lower to Middle Ordovician (Tremadocian to early Darriwilian), but increase to + 31‰ during the mid–late Darriwilian and mid Sandbian, similar to published data from younger Late Ordovician positive $\delta$13C excursions known as the Guttenberg (GICE) and Hirnantian (HICE) events. The overall $\Delta$13C trend shows a $\sim$ 3‰ increase throughout the Early–Middle Ordovician and coincides with a previously interpreted period of ocean cooling and some of the earliest pulses of global biodiversity of marine invertebrates and planktonic organisms. Modeling studies predict that pCO2 decreased during this time, suggesting that the effect of pCO2 on $\Delta$13C may have been overwhelmed by other controls, such as an in increase in pO2 or a higher O2/CO2 ratio during this biodiversification event.},
author = {Edwards, Cole T. and Saltzman, Matthew R.},
doi = {10.1016/j.palaeo.2015.08.005},
