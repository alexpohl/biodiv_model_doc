issn = {19432682},
journal = {Geology},
number = {4},
pages = {327--330},
title = {{Congruent Permian-Triassic $\delta$238U records at Panthalassic and Tethyan sites: Confirmation of global-oceanic anoxia and validation of the U-isotope paleoredox proxy}},
