issn = {00310182},
journal = {Palaeogeography, Palaeoclimatology, Palaeoecology},
keywords = {Biotic crisis,Diversity change,Kellwasser events,Mass extinction,South China,Upper Devonian},
pages = {224--244},
publisher = {Elsevier B.V.},
title = {{The Late Devonian Frasnian-Famennian Event in South China - Patterns and causes of extinctions, sea level changes, and isotope variations}},
url = {http://dx.doi.org/10.1016/j.palaeo.2015.10.047},
