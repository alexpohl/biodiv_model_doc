file = {:Users/alexandrepohl/Documents/Mendeley Desktop/JenkynsetalSed.pdf:pdf},
issn = {13653091},
journal = {Sedimentology},
keywords = {Cenomanian–Turonian,Cretaceous,OAE 2,geochemical change,palaeoceanography},
number = {1},
pages = {16--43},
title = {{Basalt-seawater interaction, the Plenus Cold Event, enhanced weathering and geochemical change: deconstructing Oceanic Anoxic Event 2 (Cenomanian–Turonian, Late Cretaceous)}},
volume = {64},
